<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/select_menu_color</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ab_titleBarHeight">@dimen/dp_45</item>
        <item name="ab_statusBarColor">@android:color/transparent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="ab_autoImmersion">true</item>
    </style>

    <style name="TitleBar.Common">
        <item name="abc_titleTextColor">@android:color/white</item>
        <item name="abc_leftIconColor">@android:color/white</item>
        <item name="abc_leftIconPadding">@dimen/dp_13</item>
        <item name="abc_leftIconMarginLeft">@dimen/dp_3</item>
        <item name="abc_leftTextColor">@android:color/white</item>
        <item name="abc_rightIconColor">@android:color/white</item>
        <item name="abc_rightIconPadding">@dimen/dp_13</item>
        <item name="abc_rightIconMarginRight">@dimen/dp_3</item>
        <item name="abc_rightTextColor">@android:color/white</item>
        <item name="abc_titleTextSize">@dimen/sp_16</item>
    </style>

    <style name="TipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="tip_dialog_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/dp_120</item>
        <item name="android:minHeight">@dimen/dp_120</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:paddingRight">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="android:background">@drawable/tip_dialog_bg</item>
    </style>

</resources>
